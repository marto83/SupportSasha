 <!DOCTYPE html>
<html lang="en">
<head
    <meta charset="utf-8"/>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Sasha Georgiev donations pages"/>
    <meta name="author" content="Martin Georgiev"/>
    <!-- Le styles -->
    <link href="@Url.Css("bootstrap.css")" rel="stylesheet">
    <link href="@Url.Css("fonts.css")" rel="stylesheet">
    <link href="@Url.Css("styles.css")" rel="stylesheet">
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
    <link href="@Url.Css("bootstrap-responsive.css")" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="/">Support Sasha</a>
                
                @if (IsSectionDefined("Navigation")) {
                    @RenderSection("Navigation");
                }
                else
                { 
                     <div class="nav-collapse">
                                    <ul class="nav">
                                        <li class="active"><a href="/">Home</a></li>
                                        <li><a href="/Fundraising/Zara">Zara</a></li>
                                        <li><a href="/Donations">Donate</a></li>
                                        <li><a href="http://www.supportsasha.com">Blog</a></li>
                                    </ul>
                                </div>   
                }
                
                
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2  left-sidebar">
                <img id="logo" src="/Content/Images/logo.png" class="logo" alt="Logo">
                <h1>
                   Support Sasha Donations</h1>

                @RenderSection("SideNav", false)
            </div>
            <!--/span-->
            <div class="span10">
                @Html.Partial("Message", "alert")
                @Html.Partial("Message", "message")
                
                @RenderBody()
               
            </div>
            <!--/span-->
        </div>
        <!--/row-->
        <hr>
        <footer>
        <p>&copy; Support Sasha @DateTime.Now.Year</p>
        <div id="credits-appharbor">
			<a href="http://appharbor.com">Hosting provided by AppHarbor</a>
		</div>
      </footer>
    </div>
    <!--/.fluid-container-->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Javascript("jquery.js")"></script>

    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-33629053-2']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</body>
</html>
    
