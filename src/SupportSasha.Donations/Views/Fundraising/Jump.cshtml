    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>
    Martin and Chris skydive on 6 April</h1>
<div class="row-fluid">
    <div class="span2 swimmer">
        <img src='/Content/Images/martin-and-sasha.JPG' alt="Martin" />
